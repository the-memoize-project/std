{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@directive": ["./packages/directive"],
      "@directive/*": ["./packages/directive/*"],
      "@dom": ["./packages/dom"],
      "@dom/*": ["./packages/dom/*"],
      "@echo": ["./packages/echo"],
      "@echo/*": ["./packages/echo/*"],
      "@event": ["./packages/event"],
      "@event/*": ["./packages/event/*"],
      "@polyfill": ["./packages/polyfill"],
      "@polyfill/*": ["./packages/polyfill/*"],
      "@spark": ["./packages/spark"],
      "@spark/*": ["./packages/spark/*"]
    }
  },
  "include": ["packages/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
